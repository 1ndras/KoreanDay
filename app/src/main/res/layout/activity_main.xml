<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundd"
    android:weightSum="2">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="22dp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logobaru" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnstart"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/login"
        android:textColor="@color/putih"
        android:background="@drawable/background_button"
        tools:ignore="RtlHardcoded"
        android:layout_above="@+id/btninfo"
        android:layout_alignStart="@+id/btninfo"
        android:layout_marginBottom="17dp"
        android:layout_alignLeft="@+id/btninfo" />


    <Button
        android:layout_gravity="center"
        android:id="@+id/btninfo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnexit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/info"
        android:textColor="@color/putih"
        android:background="@drawable/background_button"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnexit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btninfo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="@string/exit"
        android:textColor="@color/putih"
        android:background="@drawable/background_button"
        tools:ignore="RtlHardcoded" />


</LinearLayout>
