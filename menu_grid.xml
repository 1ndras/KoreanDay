<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="2"
    tools:context="com.example.indra_act.koreanday.MenuGrid"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/backgroundd">

    <ImageButton
        android:id="@+id/vokal"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="13dp"
        android:background="@android:drawable/menuitem_background"
        android:cropToPadding="false"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/konsonan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vokal" />

    <ImageButton
        android:id="@+id/konsonan"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/menuitem_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vokal"
        app:srcCompat="@drawable/konsonan" />

    <ImageButton
        android:id="@+id/angka"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="193dp"
        android:layout_marginLeft="60dp"
        android:background="@android:drawable/menuitem_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vokal"
        app:srcCompat="@drawable/angka"
        android:layout_marginStart="60dp" />

    <ImageButton
        android:id="@+id/dialog"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginRight="50dp"
        android:background="@android:drawable/menuitem_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/konsonan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/angka"
        app:srcCompat="@drawable/dialog"
        android:layout_marginEnd="50dp" />

    <ImageButton
        android:id="@+id/latihan"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="60dp"
        android:background="@android:drawable/menuitem_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/angka"
        app:srcCompat="@drawable/latihan"
        android:layout_marginStart="60dp" />

    <ImageButton
        android:id="@+id/Cbt"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:background="@android:drawable/menuitem_background"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintLeft_toRightOf="@+id/latihan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/latihan"
        app:srcCompat="@drawable/cbt" />

</android.support.constraint.ConstraintLayout>